<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>

<!-- TODO = modify and expand the range of menus available from the menu menu, and develop game modes you can select when starting a new game -->
<!-- vertically stacked label and button -->

<VBox alignment="CENTER" prefHeight="213.0" prefWidth="211.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Cheat" />
      <Label text="Health Cheat" />
      <TextField fx:id="healthCheat" text="0" />
      <Label text="Gold Cheat" />
      <TextField fx:id="goldCheat" text="0" />
      <Label text="Exp Cheat" />
      <TextField fx:id="expCheat" text="0" />
      
      <!-- clicking button should start/resume the game -->
      <Button fx:id="add"  onAction = "#addCheat" text="add" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
