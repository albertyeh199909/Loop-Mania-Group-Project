<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<!-- TODO = modify and expand the range of menus available from the menu menu, and develop game modes you can select when starting a new game -->
<!-- vertically stacked label and button -->

<VBox alignment="CENTER" prefHeight="213.0" prefWidth="211.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Main Menu" />
      <CheckBox fx:id="standardModeCheckBox" mnemonicParsing="false" text="Standard Mode" />
      <CheckBox fx:id="survivalModeCheckBox" mnemonicParsing="false" text="Survival Mode" />
      <CheckBox fx:id="berserkerModeCheckBox" mnemonicParsing="false" text="Berserker Mode" />
      <CheckBox fx:id="confusingModeCheckBox" mnemonicParsing="false" text="Confusing Mode" />
      <!-- clicking button should start/resume the game -->
      <Button fx:id="startGameButton" onAction="#switchToGame" text="Start Game" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
